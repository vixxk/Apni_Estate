# Backend Environment Variables Example
# Copy this file to .env.local and fill in the values

# Server Configuration
PORT=4000
NODE_ENV=development
BACKEND_URL=http://localhost:4000
WEBSITE_URL=http://localhost:5173

# MongoDB Connection
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<dbname>
# Note: Some scripts might use MONGOURI
MONGOURI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<dbname>

# Authentication
JWTSECRET=your_super_secret_jwt_key_here

# ImageKit Configuration (for media uploads)
IMAGEKIT_PUBLIC_KEY=your_public_key_here
IMAGEKIT_PRIVATE_KEY=your_private_key_here
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_id

# Admin Credentials
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your_secure_password_here

# Email (Brevo/SMTP) Configuration
SMTP_USER=your_smtp_user
EMAIL=your_sender_email@example.com
SMTP_PASS=your_smtp_password

# AI Services (Optional)
FIRECRAWL_API_KEY=your_key_here
HUGGINGFACE_API_KEY=your_key_here
MODEL_ID=mistralai/Mistral-7B-Instruct-v0.2
OPENROUTER_API_KEY=your_key_here
OPENAI_API_KEY=your_key_here
AZURE_API_KEY=your_key_here
USE_AZURE=false
